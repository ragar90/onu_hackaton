<%- model_class = Account -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @account.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_id) %>:</strong></dt>
  <dd><%= @account.client_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fee) %>:</strong></dt>
  <dd><%= @account.fee %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bank_account) %>:</strong></dt>
  <dd><%= @account.bank_account %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @account.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_day) %>:</strong></dt>
  <dd><%= @account.payment_day %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_loan) %>:</strong></dt>
  <dd><%= @account.is_loan %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_loan) %>:</strong></dt>
  <dd><%= @account.total_loan %></dd>
  <dt><strong><%= model_class.human_attribute_name(:balance_paid) %>:</strong></dt>
  <dd><%= @account.balance_paid %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              accounts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_account_path(@account), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              account_path(@account),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
